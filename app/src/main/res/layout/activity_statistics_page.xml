<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statistics_main_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context=".Statistics_page">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@drawable/back2"

        >

        <TextView
            android:id="@+id/dataviewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:scrollbars="vertical"
            android:textColor="#2F497A"
            android:textSize="14sp">

        </TextView>

    </ScrollView>

    <LinearLayout
        android:id="@+id/statistics_button_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/back1"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/money_button"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/graph_icon" />

            <ImageButton
                android:id="@+id/student_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:background="@mipmap/man_list_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginBottom="3dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/statistics_button_textview"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:text="Statistics"
                android:textAlignment="center"
                android:textColor="#2F497A"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/statistics_button_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:background="#fff"
                android:text="Students"
                android:textAlignment="center"
                android:textColor="#2F497A"
                android:textSize="17sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>