<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:orientation="vertical"
    tools:context=".Edit_Profile">

    <LinearLayout
        android:id="@+id/edit_profile_actionbar_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/edit_profile_checkbox"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="10dp"
            android:background="#40527A"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/pay_button"
            android:layout_width="45dp"
            android:layout_height="match_parent"

            android:src="@mipmap/payed_btn_round" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/editor_icon_round" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:src="@mipmap/deleting_icon_round" />


    </LinearLayout>

    <ImageView
        android:id="@+id/edit_profile_imageview"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/yismu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#40527A"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_profile_name"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Name:"
            android:textColor="#fff"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/edit_profile_name_txt"
            android:layout_width="327dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"

            android:layout_weight="7"
            android:inputType="textCapWords"
            android:textColor="#ffff" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#40527A"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_profile_phone"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Phone :"
            android:textColor="#fff"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_profile_phone_txt"
            android:layout_width="273dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="#ffff" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#40527A"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/edit_profile_registeration_textview"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Date :"
            android:textColor="#fff"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_profile_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:textColor="#ffff"
            android:textColorHint="#444" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#40527A"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/gender_textview"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gender:"
            android:textColor="#fff"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_profile_gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:inputType="text"
            android:textColor="#ffff"
            android:textColorHint="#444" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#40527A"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/belt"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Belt :"
            android:textColor="#fff"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/edit_profile_belt_txt"
            android:layout_width="327dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="7"
            android:inputType="text"
            android:textColor="#ffff" />

    </LinearLayout>


    <Button
        android:id="@+id/edit_profile_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#40527A"
        android:text="Save"
        android:textColor="#FFFFFF" />


</LinearLayout>